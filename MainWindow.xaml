            <Menu Height="18">
                <MenuItem Header="Registros">
                    <MenuItem Name="RegistrosMenuItem" Header="Registrar Producto" Click="RegistrosMenuItem_Click"/>

                </MenuItem>
            </Menu>

        </StackPanel><!--STACK PANEL PRINCIPAL-->
    </Grid>
</Window>
